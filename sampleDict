FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Set output format.
setFormat csv;

// optionally define extra controls for the output formats
formatOptions
{
    ensight
    {
        format  ascii;
    }
}

// interpolationScheme.
interpolationScheme cell;

// Fields to sample.
fields
(
    fieldNames
);

// Set sampling definition.
sets
(
    samplePoints
    {
        type    cloud;
        axis    xyz;
        points  (
                (1 2 1)
                (3 2 1)
                (5 2 1)
                (1 4 1)
                (3 4 1)
                (5 4 1)
                (1 6 1)
                (3 6 1)
                (5 6 1)
                );
    }
);

// *********************************************************************** //
